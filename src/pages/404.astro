---
const title = "404: Page Not Found";
const description =
  "The page you are looking for may have been removed, renamed, or is temporarily unavailable.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-gray-50 min-h-screen flex items-center justify-center p-4">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-gray-800 mb-4">404</h1>
      <p class="text-xl text-gray-600 mb-8">{description}</p>
      <a
        href="/"
        class="inline-block bg-slate-600 hover:bg-slate-700 text-white font-medium px-6 py-3 rounded-lg transition-colors"
      >
        Back to Home
      </a>
    </div>
  </body>
</html>

---
import { type Category } from "../types";

const getCategoryColor = (category: Category) => {
  const colors = {
    Technical: "text-indigo-600 bg-indigo-50",
    "Personal Growth": "text-green-600 bg-green-50",
    Life: "text-blue-600 bg-blue-50",
  } as const;
  return colors[category];
};

interface Props {
  category: Category;
}

const { category } = Astro.props;
---

<span
  class={`text-sm font-medium px-2 py-1 rounded-full ${getCategoryColor(category)}`}
>
  {category}
</span>
